<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_160sdp"
    android:layout_height="@dimen/_280sdp"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    tools:ignore="UnusedAttribute">
    <!--    Layout item mon an cu-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtStarProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_star"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="4.8 | "
            android:textColor="#F44336"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNameProduct" />

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_ads1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:outlineSpotShadowColor="@color/black"
            android:padding="@dimen/_5sdp"
            android:text="Bún Bò Huế Bún Bò Huế Bún Bò Huế"
            android:textColor="#2196F3"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imgProduct" />

        <TextView
            android:id="@+id/txtPriceDiscountProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="100.000 VNĐ"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#020202"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtStarProduct" />


        <TextView
            android:id="@+id/txtCustomerProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/ic_shopping_cart"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="100"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@+id/txtStarProduct"
            app:layout_constraintStart_toEndOf="@+id/txtStarProduct"
            app:layout_constraintTop_toTopOf="@+id/txtStarProduct" />

        <TextView
            android:id="@+id/txtUnitPriceProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="150.000 VNĐ"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtPriceDiscountProduct"
            app:layout_constraintTop_toBottomOf="@+id/txtPriceDiscountProduct" />

        <TextView
            android:id="@+id/txtDiscountProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/custom_discount"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="-5%"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/txtUnitPriceProduct"
            app:layout_constraintStart_toEndOf="@+id/txtUnitPriceProduct"
            app:layout_constraintTop_toTopOf="@+id/txtUnitPriceProduct" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>